<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vn.codegym.airbnb.mapper.PropertyImageDTOMapper">

    <select id="selectAll" resultMap="result">
        select p.*, pi.id as id_img, pi.image_path from properties p join property_img pi on p.id = pi.property_id;
    </select>


    <select id="findById" resultMap="result" parameterType="int">
        select p.*, pi.id as id_img, pi.image_path from properties p join property_img pi on p.id = pi.property_id where p.id = #{id};
    </select>

    <resultMap id = "result" type = "vn.codegym.airbnb.dto.PropertyImageDTO">
        <result property = "propertyId" column = "id"/>
        <result property = "name" column = "name"/>
        <result property = "description" column = "description"/>
        <result property = "userId" column = "user_id"/>
        <result property = "houseTypeId" column = "house_type_id"/>
        <result property = "provinceId" column = "province_id"/>
        <result property = "countryId" column = "country_id"/>
        <result property = "address" column = "address"/>
        <result property = "bedroomCount" column = "bedroom_count"/>
        <result property = "bathroomCount" column = "bathroom_count"/>
        <result property = "price" column = "price"/>
        <result property = "status" column = "status"/>
        <result property = "propertyImageId" column = "id_img"/>
        <result property = "imagePath" column = "image_path"/>
    </resultMap>

</mapper>